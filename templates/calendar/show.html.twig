{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4" style="border-left: 6px solid {{ event.color|default('#4285F4') }};">

                <div class="mb-2">
                    <a href="{{ path('calendar_index') }}" class="btn btn-link p-0 d-inline-flex align-items-center text-decoration-none" aria-label="Retour au calendrier" style="color:#1a73e8;">
                        <i class="bi bi-arrow-left me-2"></i>
                        <span>Retour au calendrier</span>
                    </a>
                </div>

                <div class="mb-3">
                    <h2 class="h4 mb-1">{{ event.title }}</h2>
                    <div class="text-muted small">
                        <i class="bi bi-calendar-event me-1"></i>
                        du {{ event.startDate|date('d M Y à H:i') }} - {{ event.endDate|date('d M Y à H:i') }}
                    </div>
                </div>

                {% if event.category %}
                    <div class="mb-3">
                        <span class="badge rounded-pill"
                              style="border:1px solid {{ event.color|default('#4285F4') }}; color: {{ event.color|default('#4285F4') }}; background-color: rgba(66,133,244,0.06);">
                            <i class="bi bi-tag me-1"></i>{{ event.category.name }}
                        </span>
                    </div>
                {% endif %}

                {% if event.description %}
                    <div class="mt-3">
                        <h6 class="text-uppercase text-muted small mb-2">Description</h6>
                        <div class="fs-6">{{ event.description|nl2br }}</div>
                    </div>
                {% endif %}
            </div>

            <div class="card-footer bg-transparent border-0 pt-0 mb-2 me-2">
                <div class="d-flex justify-content-end">
                    <a href="{{ path('calendar_event_edit', { id: event.id }) }}"
                       class="btn d-inline-flex align-items-center"
                       style="background-color:#1a73e8;color:#fff;border:none;border-radius:.5rem;padding:.5rem 1rem;font-weight:500;box-shadow:0 1px 2px rgba(0,0,0,.1);">
                        <i class="bi bi-pencil me-2"></i>
                        Modifier
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
