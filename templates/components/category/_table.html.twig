<table class="table table-hover">
    <thead>
        <tr>
            <th>Nom</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td class="text-end position-relative" data-controller="row-menu">
                    <button class="btn btn-sm" type="button" data-action="click->row-menu#toggle">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="filter-menu row-menu" data-row-menu-target="menu">
                        <a type="button" class="row-menu-item" href="{{ path('category_edit', { 'id': category.id }) }}">Modifier</a>
                        <form id="delete_category_{{ category.id }}" method="post" action="{{ path('category_delete', {'id': category.id}) }}" data-controller="confirm">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                            <a type="button" class="row-menu-item flex-shrink-0" data-action="confirm#confirmDeletion" title="Supprimer" data-bs-toggle="tooltip">
                                Supprimer
                            </a>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2" class="text-center text-muted">Aucune categorie pour le moment.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
